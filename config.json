{
  "rabbitmq": {
    "host": "localhost",
    "port": 5671,
    "ssl": {
      "cert_chain_file": "./certs/client/cert.pem",
      "private_key_file": "./certs/client/key.pem"
    },
    "vhost": "/sa-monitoring",
    "user": "sa-monitoring",
    "password": "password"
  },
  "redis": {
    "host": "localhost",
    "port": 6379
  },
  "api": {
    "host": "localhost",
    "port": 8080
  },
  "handlers": {
    "test": "ruby ./handlers/test"
  },
  "checks": {
    "foo": {
      "command": "ruby ./plugins/test -c :::name:::",
      "subscribers": [
        "foo"
      ],
      "interval": 5,
      "alert": false
    },
    "bar": {
      "command": "ruby ./plugins/test -c :::name:::",
      "subscribers": [
        "bar"
      ],
      "interval": 12,
      "alert": true
    }
  },
  "client": {
    "name": "i-424242",
    "address": "127.0.0.1",
    "subscriptions": [
      "foo",
      "bar"
    ]
  }
}
