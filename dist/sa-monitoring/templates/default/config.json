{
  "servers": [
    "localhost"
  ],

  "rabbitmq_server": "localhost",

  "subscriptions": [
  <% @subscriptions.each do |s| -%>
    "<%= s %>",
  <% end -%>
  ],

  "exchanges": [
    <% @exchanges.each do |e| -%>
    "<%= e %>",
    <% end -%>
  ],

  "checks": {
    <% @checks.each do |c| -%>
    "<%= c['check_name'] %>": {
      "command": "<%= c['command'] %>",
      "roles": [
        <% c['roles'].each do |r| -%>
        "<%= r %>",
        <% end -%>
      ]
    },
    <% end -%>
  }
}
