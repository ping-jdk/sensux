{
  "servers": [
    "localhost"
  ],

  "rabbitmq_server": "localhost",

  "subscriptions": [
  <% @subscriptions.each do |s| -%>
    "<%= s %>",
  <% end -%>
  ],

  "exchanges": [
    <% @exchanges.join(", \n") -%>
  ],

  "checks": {
    <% @checks.each do |c| -%>
    "<%= c['check_name'] %>": {
      "command": "<%= c['command'] %>",
      "subscriptions": [
        <% c['roles'].join(", \n") -%>
      ]
    }<%= ',' unless c == @checks.last %>
    <% end -%>
  }
}
