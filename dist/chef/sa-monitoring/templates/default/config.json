{
  "workers": [
    "localhost"
  ],

  "rabbitmq": {
    "server": "localhost"
  },

  "redis": {
    "server": "localhost"
  },

  "checks": {
    <% @checks.each do |c| -%>
    "<%= c['check_name'] %>": {
      "command": "<%= c['command'] %>",
      "subscriptions": [
        <% c['roles'].join(", \n") -%>
      ]
    }<%= ',' unless c == @checks.last %>
    <% end -%>
  },

  "client": {
    "subscriptions": [
      <%= @subscriptions.join(",\n") -%>
    ]
  }
}
