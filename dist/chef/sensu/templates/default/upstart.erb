# Upstart: /etc/init/sa-monitoring-<%= @service %>.conf
# Managed by OpsChef

description "sa monitoring <%= @service %>"

start on (local-filesystems and net-device-up IFACE=eth0)
stop on [!12345]

respawn

pre-start script
  test -x /usr/bin/sa-monitoring-<%= @service %> || { stop; exit 0; }
end script

exec sudo -u <%= node.sa_monitoring.user %> sh -c "/usr/bin/sa-monitoring-<%= @service %>"
